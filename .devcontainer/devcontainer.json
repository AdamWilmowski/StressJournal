{
  "name": "Stress Diary Flask App",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "app.py"
      ]
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.flake8",
        "ms-python.black-formatter"
      ]
    }
  },
  "updateContentCommand": "[ -f requirements.txt ] && pip3 install --user -r requirements.txt; echo 'âœ… Flask dependencies installed'",
  "postAttachCommand": "echo 'ðŸš€ Stress Diary Flask App ready! Run: python app.py'",
  "portsAttributes": {
    "5000": {
      "label": "Flask App",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    5000
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  }
}